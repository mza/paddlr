<div id='boat'>
	<div class='container'>
		<div class='browse'>
			<h2>Classes</h2>
		</div>
	</div>
</div>

<div class='entry container'>
	<%= link_to 'Senior Doubles', :action => :show, :id => 'senior_doubles' %> &middot; <%= link_to 'Senior Singles', :action => :show, :id => "senior_singles" %> &middot; <%= link_to 'Junior Doubles', :action => :show, :id => "junior_doubles" %> &middot; <%= link_to 'Junior/Vet', :action => :show, :id => "junior_vet" %> &middot; <%= link_to 'Endeavour', :action => :show, :id => "endeavour" %>
</div>

<div class='entry container'>
	<h3><%= @title %></h3>
	<table width='100%' cellpadding='0' cellspacing='0'>
		<tr>
			<th>Place</th>
			<th>No.</th>
			<th>Crew</th>
			<th>Time</th>
			<th>Speed</th>
		</tr>
		<% @boats.each_with_index do |boat, index| %>
		<tr class='<%= cycle '', 'alt' %>'>
			<td><%= boat.retired? ? "--" : (index + 1).ordinalize %></td>
			<td><%= boat.number %></td>
			<td><%= link_to boat.paddler_names, :controller => :boats, :action => :show, :id => boat.number, :year => 2009 %></td>
			<td><%= boat.result.nil? ? "&nbsp;" : boat.result.time %></td>
			<td><%= boat.result.nil? ? "&nbsp;" : boat.average_speed %></td>
		</tr>
		<% end %>
	</table>
</div>